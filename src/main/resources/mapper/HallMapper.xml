<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cinema.demo.dao.HallMapper">
    <resultMap type="cinema.demo.entity.Hall" id="HallMap">
        <id property="id" column="hall_id" javaType="int"/>
        <result property="hallName" column="hall_name" javaType="java.lang.String"/>
        <result property="cinemaId" column="cinema_id" javaType="int"/>
    </resultMap>


    <select id="selectHallById" parameterType="int" resultMap="HallMap">
        select * from  hall where hall_id = #{id}
    </select>

    <select id="selectAllHalls" resultMap="HallMap">
        select * from hall
    </select>

    <insert id="addHall" parameterType="cinema.demo.entity.Hall" keyProperty="id">
        insert into (hallName,cinemaId)
        values (#{hall_name},#{cinema_id})
    </insert>


    <update id="updateHall">
        update hall
        <set>
            hall_name = #{hallName},
            cinema_id = #{cinemaId}
        </set>
        where hall_id = #{id}
    </update>

    <delete id="deleteHall" parameterType="int">
        delete from hall where hall_id = #{id}
    </delete>

    <select id="selectHallByCinemaId" resultMap="HallMap" >
		select * from hall where cinema_id = #{cinemaId}
    </select>
</mapper>
